<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".viewmodel.qris.StatusQrisFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_status"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:src="@drawable/ic_failed" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_title"
        style="@style/Theme.DokuSDK.FinishTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="Pembayaran QRIS Expired!" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_desc"
        style="@style/Theme.DokuSDK.FinishDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Pembayaran QRIS telah expired" />

</LinearLayout>