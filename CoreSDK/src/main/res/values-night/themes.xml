<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DokuSDK" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_60</item>
        <item name="colorPrimaryVariant">@color/red_60</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">
            @style/Theme.DokuSDK.AppBottomSheetDialogTheme
        </item>
        <item name="android:fontFamily">@font/din_next_lt_pro</item>
        <item name="fontFamily">@font/din_next_lt_pro</item>
    </style>

    <style name="Theme.DokuSDK.AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.DokuSDK.AppModalStyle</item>
    </style>

    <style name="Theme.DokuSDK.AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_sheet</item>
    </style>

    <style name="Theme.DokuSDK.ToolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_neutral_80</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="Theme.DokuSDK.StepTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="Theme.DokuSDK.StepCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_neutral_70</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    </style>

    <style name="Theme.DokuSDK.FooterCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
        <item name="android:textColor">@color/black_neutral_50</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="Theme.DokuSDK.BottomSheetTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight" tools:targetApi="p">30sp</item>
        <item name="android:textColor">@color/black_neutral_80</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="Theme.DokuSDK.BottomSheetCaption">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">28sp</item>
        <item name="android:textColor">@color/gray_neutral_60</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="Theme.DokuSDK.FinishTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_neutral_80</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:lineHeight" tools:targetApi="p">30sp</item>
    </style>

    <style name="Theme.DokuSDK.FinishDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_neutral_60</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="Theme.DokuSDK.FinishError">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_neutral_50</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="Theme.DokuSDK.ProgressBarTheme">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Theme.DokuSDK.HeaderCamCaption">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="Theme.DokuSDK.FooterButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">@color/gray_neutral_10</item>
        <!--        <item name="android:textFontWeight" tools:targetApi="p">500</item>-->
        <item name="backgroundTint">@color/red_60</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.DokuSDK.FooterOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">@color/red_60</item>
        <item name="strokeColor">@color/red_60</item>
        <!--        <item name="android:textFontWeight" tools:targetApi="p">500</item>-->
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/red_60</item>
    </style>

    <style name="Theme.DokuSDK.FooterCardImage">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="Theme.DokuSDK.CorrectionCaption" parent="Theme.DokuSDK.StepCaption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Theme.DokuSDK.CorrectionIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Theme.DokuSDK.BaseEditField">
        <item name="android:layout_height">48dp</item>
        <item name="android:textAppearance">@style/Theme.DokuSDK.StepTitle</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">@drawable/base_edit_text_border</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:drawableTint">@color/gray_neutral_60</item>
        <item name="android:textCursorDrawable">@drawable/cursor_red</item>
    </style>

    <style name="Theme.DokuSDK.CustomCardTopRounded" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/Theme.DokuSDK.ShapeAppearanceOverlayCardToRounded
        </item>
    </style>


    <style name="Theme.DokuSDK.ShapeAppearanceOverlayCardToRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.DokuSDK.WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="Theme.DokuSDK.Doku">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
    </style>
</resources>